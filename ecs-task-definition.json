{
  "family": "mannbiome-customer-portal-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::088462465887:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::088462465887:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mannbiome-customer-portal-api",
      "image": "088462465887.dkr.ecr.us-east-2.amazonaws.com/mannbiome-customer-portal-api:latest",
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:db_admin@vendor-portal-db.cszf6hop4o2t.us-east-2.rds.amazonaws.com:5432/mannbiome"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "APP_NAME",
          "value": "MannBiome Customer Portal API"
        },
        {
          "name": "APP_VERSION",
          "value": "1.0.0"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mannbiome-customer-portal-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/api/health-check || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}