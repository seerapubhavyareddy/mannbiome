version: '3.8'

services:
  mannbiome-customer-portal-api:
    build: .
    ports:
      - "8001:8001"
    environment:
      - DATABASE_URL=postgresql://postgres:db_admin@vendor-portal-db.cszf6hop4o2t.us-east-2.rds.amazonaws.com:5432/mannbiome
      - JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
      - JWT_ALGORITHM=HS256
      - ENVIRONMENT=development
      - APP_NAME=MannBiome Customer Portal API
      - APP_VERSION=1.0.0
      - APP_DESCRIPTION=API for the MannBiome Customer Portal platform with microbiome analysis
    volumes:
      - .:/app
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8001/api/health-check"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - mannbiome-network

networks:
  mannbiome-network:
    driver: bridge